generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mongodb"
    url      = env("DATABASE_URL")
}

model Server {
    id                   Int     @id @map("_id")
    antiSpam             Boolean @default(false)
    antiSpamMaxFrequency Int     @default(0)
}

model Warning {
    id     DateTime @id @map("_id")
    user   User     @relation(fields: [userId], references: [id])
    userId Int
    reason String   @default("")
}

model User {
    id       Int       @id @map("_id")
    warnings Warning[]
}
